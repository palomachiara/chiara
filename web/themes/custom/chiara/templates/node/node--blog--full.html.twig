<section class="blog__header">
  <div class="blog__header-container">
    <h1 class="blog__header-title">{{ node.title.value }}</h1>
  </div>
</section>
<section class="blog__content">
  <div class="blog__content-container">
    <div>
      {% if node.field_image.value %}
        <img class="blog__content-img" src="{{ file_url(node.field_image.entity.fileuri) }}" alt="" />
      {% endif %}
      {% if node.field_description.value %}
        <div class="blog__content-txt">{{ node.field_description.value|raw }}</div>
      {% endif %}
    </div>
    <div class="blog__content-share">

    </div>
  </div>
</section>


